PORT=3001

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=omnirambles
DB_USER=postgres
DB_PASSWORD=your_password_here

# ============================================================================
# Authentication & Security
# ============================================================================

# Session Secret (CRITICAL: Generate a strong random string for production!)
# Generate with: openssl rand -base64 32
SESSION_SECRET=change-this-to-a-very-long-random-string-in-production

# Session timeout in milliseconds (default: 24 hours)
SESSION_TIMEOUT=86400000

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Login attempt limits
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in milliseconds (default: 15 minutes)
LOCKOUT_DURATION=900000

# ============================================================================
# Frontend Configuration
# ============================================================================

# Frontend URL for CORS (use your production domain in production)
FRONTEND_URL=http://localhost:5173

# ============================================================================
# Application Environment
# ============================================================================

# Environment: development, production
NODE_ENV=development

